<!-- Sidebar Component -->
<aside class="w-64 bg-white border-r border-gray-200 flex flex-col overflow-y-auto shrink-0">
  <nav class="flex-1 px-4 py-6 space-y-8">
    <div v-for="section in navSections" :key="section.title">
      <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">
        {{ section.title }}
      </h3>
      <div class="space-y-1">
        <button 
          v-for="item in section.items" 
          :key="item.id"
          @click="openTab(item)"
          :class="['sidebar-link w-full flex items-center px-4 py-2 text-sm font-medium rounded-lg transition-colors', activeTabId === item.id ? 'bg-blue-50 text-blue-700 border-r-4 border-blue-700' : 'text-gray-600 hover:bg-gray-100']"
        >
          <i :class="['ti mr-3 text-lg', item.icon]"></i>
          {{ item.label }}
        </button>
      </div>
    </div>
  </nav>
</aside>
